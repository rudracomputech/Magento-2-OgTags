<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="media_gallery" sortOrder="10">
        <field name="og_image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">image</item>
                    <item name="label" xsi:type="string">OG Image</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="formElement" xsi:type="string">imageUploader</item>
                    <item name="componentType" xsi:type="string">fileUploader</item>
                    <item name="dataScope" xsi:type="string">image</item>
                    <item name="additionalData" xsi:type="array">
                        <item name="image_role" xsi:type="string">og_image</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
